<p id="notice"><%= notice %></p>

<h1>Listing Animals</h1>

<table class="table">
  <thead>
    <tr>
      <th>Common name</th>
      <th>Latin name</th>
      <th>Kingdom</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="animalTable">
    <% @animals.each do |animal| %>
      <tr >
        <td><%= animal.common_name %></td>
        <td><%= animal.latin_name %></td>
        <td><%= animal.kingdom %></td>
        <td><%= link_to 'Show', animal %></td>
        <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
        <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<a href='/sightings'>Sightings</a>

<%= link_to 'New Animal', new_animal_path %>

<p>
<input type="text" name="animal[common_name]" placeholder="Common Name" id="common_name">
<input type="text" name="animal[latin_name]" placeholder="Latin Name" id="latin_name">
<input type="text" name="animal[kingdom]" placeholder="Kingdom" id="kingdom">
<input type="button" value="submit" id="add_new_animal"></button>
</p>
